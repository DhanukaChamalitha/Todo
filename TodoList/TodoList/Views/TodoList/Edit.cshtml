@model TodoItem

<h2>Edit Item</h2>

<form asp-action="Edit"> 
	<input type="hidden" asp-for="Id" />
	<div>

		<label asp-for="Title"></label>
		<input asp-for="Title" />

	</div>

	<div>
		<label asp-for="IsCompleted"></label>
		<input asp-for="IsCompleted" />
	</div>

	<div>
		<input type="submit" value="Save"/>
	</div>

</form>